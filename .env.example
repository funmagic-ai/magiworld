# ==============================================
# Database
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:9000/magi-db

# ==============================================
# AWS S3 Storage
# ==============================================
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Bucket names (defaults if not specified)
S3_BUCKET_NAME=magiworld-admin-assets      # Private bucket for admin assets
S3_CDN_BUCKET=magiworld-cdn                # Public bucket for CDN assets

# ==============================================
# CloudFront CDN
# ==============================================
# Public CDN (banners, tool images)
CLOUDFRONT_URL=https://cdn.magiworld.ai

# Admin assets CDN (private, requires signed URLs)
CLOUDFRONT_ADMIN_URL=https://admin-assets.cloudfront.net

# CloudFront signed URL configuration (required for private bucket access)
CLOUDFRONT_KEY_PAIR_ID=                    # CloudFront key pair ID (starts with K)
CLOUDFRONT_PRIVATE_KEY=                    # RSA private key (replace \n with literal newlines)
CLOUDFRONT_SIGNED_URL_EXPIRY=3600          # Default URL expiry in seconds

# ==============================================
# AI APIs
# ==============================================
# OpenAI (GPT-4o, GPT-4o Mini, GPT-4 Turbo, Image generation)
OPENAI_API_KEY=sk-...

# Google AI (Gemini 2.0 Flash, Gemini 1.5 Pro, Image generation)
GOOGLE_GENERATIVE_AI_API_KEY=

# Fal.ai (Background removal, image processing)
FAL_API_KEY=

# ==============================================
# Job Queue (Inngest)
# ==============================================
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# ==============================================
# Authentication (Logto)
# ==============================================
# Web App
LOGTO_ENDPOINT=
LOGTO_APP_ID=
LOGTO_APP_SECRET=
LOGTO_BASE_URL=http://localhost:3000
LOGTO_COOKIE_SECRET=                       # Random 32+ character string

# Admin App (if separate Logto app)
# LOGTO_ADMIN_APP_ID=
# LOGTO_ADMIN_APP_SECRET=
