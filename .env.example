# ==============================================
# Database (REQUIRED)
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:9000/magi-db

# ==============================================
# AWS S3 Storage - 4-Bucket Architecture (REQUIRED)
# ==============================================
# Core AWS credentials
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Admin App Buckets
S3_ADMIN_ASSETS_BUCKET=funmagic-admin-users-assets
S3_PUBLIC_ASSETS_BUCKET=funmagic-web-public-assets

# Web App Buckets
S3_WEB_PRIVATE_BUCKET=funmagic-web-users-assets-private
S3_WEB_SHARED_BUCKET=funmagic-web-users-assets-shared

# ==============================================
# CloudFront CDN (REQUIRED)
# All assets are served via CloudFront for security and performance.
# ==============================================
# Public CDN - serves banners, tool images, brand logos
CLOUDFRONT_PUBLIC_URL=https://d1arbct25l8u2x.cloudfront.net
CLOUDFRONT_WEB_SHARED_URL=https://shared.funmagic.ai

# Private CDN - serves user assets (requires signed URLs)
CLOUDFRONT_ADMIN_PRIVATE_URL=https://d2wcxayah4inv3.cloudfront.net
CLOUDFRONT_WEB_PRIVATE_URL=https://d1jmkr23cr2ayz.cloudfront.net

# CloudFront signed URL configuration (REQUIRED for private bucket access)
# Create key pair: CloudFront > Key management > Public keys
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=

# ==============================================
# Client-side Environment Variables (REQUIRED)
# These are exposed to the browser via NEXT_PUBLIC_ prefix
# ==============================================
# Admin app - public CDN URL for uploaded assets
NEXT_PUBLIC_CLOUDFRONT_URL=https://d1arbct25l8u2x.cloudfront.net
# Admin app - private CDN URL for library assets
NEXT_PUBLIC_CLOUDFRONT_ADMIN_URL=https://d2wcxayah4inv3.cloudfront.net

# ==============================================
# Upload Configuration (OPTIONAL)
# ==============================================
# Maximum file upload size in MB (default: 20)
# Server-side limit for API routes
UPLOAD_MAX_SIZE_MB=20
# Client-side limit for validation (should match server-side)
NEXT_PUBLIC_UPLOAD_MAX_SIZE_MB=20

# ==============================================
# AI APIs
# ==============================================
# OpenAI (GPT-4o, GPT-4o Mini, GPT-4 Turbo, Image generation)
OPENAI_API_KEY=

# Google AI (Gemini 2.0 Flash, Gemini 1.5 Pro, Image generation)
GOOGLE_GENERATIVE_AI_API_KEY=

# Fal.ai (Background removal, image processing)
FAL_API_KEY=

# ==============================================
# Job Queue (Inngest)
# ==============================================
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# ==============================================
# Authentication (Logto)
# ==============================================
# Web App (port 3000)
LOGTO_ENDPOINT=
LOGTO_APP_ID=
LOGTO_APP_SECRET=
LOGTO_BASE_URL=http://localhost:3000
LOGTO_COOKIE_SECRET=

# Admin App (port 3001)
# Create a separate application in Logto console for admin
LOGTO_ADMIN_ENDPOINT=
LOGTO_ADMIN_APP_ID=
LOGTO_ADMIN_APP_SECRET=
LOGTO_ADMIN_BASE_URL=http://localhost:3001
LOGTO_ADMIN_COOKIE_SECRET=
