# =============================================================================
# Development Dockerfile for Next.js Apps (web, admin)
# 本地开发用 Dockerfile（Next.js 应用）
# =============================================================================
#
# Usage:
#   docker-compose -f docker-compose.dev.yml up -d web
#   docker-compose -f docker-compose.dev.yml up -d admin
#
# Features:
#   - Hot reload via volume mounts
#   - Turbopack for fast development
#   - Source maps for debugging
#
# =============================================================================

FROM node:20-alpine

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9.15.2 --activate

WORKDIR /app

# Build arguments
ARG APP_NAME=web
ARG APP_PORT=3000

ENV APP_NAME=${APP_NAME}
ENV APP_PORT=${APP_PORT}
ENV NODE_ENV=development
ENV SKIP_ENV_VALIDATION=true

# Copy package files for dependency installation
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/queue/package.json ./packages/queue/
COPY packages/db/package.json ./packages/db/
COPY packages/utils/package.json ./packages/utils/
COPY packages/types/package.json ./packages/types/
COPY packages/config/package.json ./packages/config/
COPY apps/${APP_NAME}/package.json ./apps/${APP_NAME}/

# Install all dependencies (including devDependencies)
RUN pnpm install --frozen-lockfile

# Copy all source code (will be overwritten by volume mounts)
COPY packages/ ./packages/
COPY apps/${APP_NAME}/ ./apps/${APP_NAME}/

# Build shared packages (these are needed by the app)
RUN pnpm --filter @magiworld/types build || true
RUN pnpm --filter @magiworld/utils build || true
RUN pnpm --filter @magiworld/db build || true
RUN pnpm --filter @magiworld/queue build || true

WORKDIR /app/apps/${APP_NAME}

EXPOSE ${APP_PORT}

# Start Next.js in development mode with Turbopack
CMD ["pnpm", "dev"]
